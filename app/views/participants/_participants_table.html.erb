<% i = 0 %>
<% @classifications.each do |classification| %>
	<h2><span class="glyphicon glyphicon-asterisk text-danger" aria-hidden="true"></span> <%= classification.name %></h2>
	<div class="table-responsive">
		<table class="table table-hover">
			<thead>
				<tr>
					<th class="col-xs-3">Name</th>
					<th class="col-xs-3">Details</th>
					<th class="col-xs-3">Status</th>
					<th class="col-xs-3">Check</th>
				</tr>
			</thead>

			<tbody>
				<% @participants[i].each do |participant| %>
					<tr>
						<td><%= participant.name %></td>
						<td><%= link_to 'Show', participant %></td>
						<% if participant.status %>
							<td><span class="glyphicon glyphicon-ok text-success" aria-hidden="true"></span></td>
							<td><button type="button" class="btn btn-default">Checked</button></td>
						<% else %>
							<td><span class="glyphicon glyphicon-remove text-danger" aria-hidden="true"></span></td>
							<td><%= button_to 'Check', check_participant_path(participant), method: :put, class: "btn btn-primary" %></td>
						<% end %>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<% i = i+1 %>
<% end %>
